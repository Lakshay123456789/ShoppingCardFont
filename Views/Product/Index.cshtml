@model IEnumerable<Product>
@{
    ViewData["Title"] = "All Product";
}
<h2>All Products</h2>
<a asp-action="AddProduct" class="btn btn-sm btn-primary">Add Product</a>
<form asp-action="Index">
    <div class="row">
        <div class="col-md-8">
            <input name="product" class="form-control" placeholder="Serach by name "/>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-info">Search</button>

        </div>
    </div>
</form>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Product Quality</th>
            <th>Product Image</th>
            <th>Product Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.ProductName</td>
                <td>@r.ProductDescription</td>
                <td>@r.ProductPrice</td>
                <td>@r.ProductQuality</td>
                <td><img src="@r.ProductImage" alt="this uploading error" height="100px" width="100px" /></td>
                <td>@r.ProductCategory</td>
                <td>
                    <a asp-action="Delete" asp-route-ProductId="@r.ProductId" class="btn btn-danger">Delete</a>
                </td>
                 <td>
                    <a asp-action="EditProduct" asp-route-ProductId="@r.ProductId" class="btn btn-success">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
